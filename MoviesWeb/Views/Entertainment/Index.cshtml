@model IEnumerable<MovieModel>

<div class="frm-div">
    <form action="~/images/Movies/">
        <input type="search" placeholder="Search" style="width:90%" class="search-bar" />
        <button type="submit" class="btn-search">
            <svg xmlns="http://www.w3.org/2000/svg" class="search-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </button>
    </form>
</div>
<div class="genre-div">
    <button class="filter">
        Filter <svg xmlns="http://www.w3.org/2000/svg" class="arrow-down" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
    </button>
    <button class="genre">
        Genre <svg xmlns="http://www.w3.org/2000/svg" class="arrow-down" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
    </button>

</div>
<form method="post">
    <div class="genre-modal hidden">

        <ul class="modal-ul">
            <li><input type="submit" name="button" value="Action" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Adventure" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Comedy" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Horror" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Thriller" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Sci-Fi" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Documentary" class="btn btn-default" /></li>
            <li><input type="submit" name="button" value="Bio" class="btn btn-default" /></li>
        </ul>

    </div>
</form>

<div class="filter-modal hidden">
    <form method="post">
        <ul class="filter-ul">
            <li><input type="checkbox" /> Popular</li>
            <li><input type="checkbox" /> New Movies</li>
            <li><input type="checkbox" /> Biography</li>
            <li><input type="checkbox" /> Educational</li>
            <li><input type="checkbox" /> Fitness</li>
            <li><input type="checkbox" /> Blockbuster</li>
            <li><input type="checkbox" /> Oscar-Winner</li>
            <li><input type="checkbox" /> Indie</li>
        </ul>
        <button class="btnz btn btn-primary" type="submit">Confirm</button>
    </form>
</div>
<div class="Movie-List">
    @foreach (var mov in Model)
    {
        var imagePath = "/images/Movies/" + mov.MovieName + ".jpg";

        <img src="@imagePath" style="width:260px" />
    }
</div>

<div class="overlay hidden"></div>