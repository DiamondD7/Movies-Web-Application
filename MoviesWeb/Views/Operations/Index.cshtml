@model IEnumerable<MovieModel>

<h2>This is the Business Side of the website</h2>
<p>This is the side where the workers/employees will create, edit or delete their products, depending on their availability(SOH)</p>

<table class="table table-bordered">
    <thead class="text-center">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Released Date (YYYY-MM-DD)</th>
            <th>Price (NZD)</th>
            <th></th>
            <th></th>   
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.MovieName</td>
                <td>@movie.MovieDescription</td>
                <td>@movie.ReleasedDate</td>
                <td>$@movie.MoviePrice</td>
                <td><a class="btn btn-danger p-1 text-white" style="width:100%" asp-area="" asp-controller="Operations" asp-action="Delete" asp-route-Id="@movie.Id">Delete</a></td>
                <td><a class="btn btn-light pr-3 pl-3" style="width:100%" asp-area="" asp-controller="Operations" asp-action="Edit" asp-route-Id="@movie.Id">Edit</a></td>
            </tr>
        }
    </tbody>
    
</table>
<a class="btn btn-primary" asp-area="" asp-controller="Operations" asp-action="Create">Create</a>